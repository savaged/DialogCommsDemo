<Window x:Class="DialogCommsDemo.Views.SubDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DialogCommsDemo.Views"
        mc:Ignorable="d"
        Title="SubDialog" Height="450" Width="800"
        Closing="OnClosing">
    <Grid Margin="50">
        <CheckBox IsChecked="{Binding DialogResult}" 
                  VerticalAlignment="Center" 
                  HorizontalAlignment="Center">Return value from this dialog</CheckBox>
    </Grid>
</Window>
